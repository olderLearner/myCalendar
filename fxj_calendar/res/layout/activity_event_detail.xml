<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/event_layout_bg"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/event_layout_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/event_detail_title"
           	style="@style/event_detail_header"
			android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:text="title" 
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/event_detail_location"
            style="@style/event_detail_header"
			android:textSize="12sp"
            android:text="location" />

        <TextView
            android:id="@+id/event_detail_begin"
            style="@style/event_detail_header"
            android:textSize="12sp"
            android:text="begin" />

        <TextView
            android:id="@+id/event_detail_stop"
            style="@style/event_detail_header"
            android:textSize="12sp"
            android:text="stop" />

        <TextView
            style="@style/add_event_divider"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp" />

        <!-- 日历 -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40.5dp"
            android:background="@color/event_layout_bg"
            android:visibility="gone" >

            <Button
                android:id="@+id/add_event_calendar"
                style="@style/add_event_button"
                android:drawablePadding="25dp"
                android:drawableRight="@drawable/event_right_arrow"
                android:text="日历" />

            <TextView
                android:id="@+id/add_event_calendar_text"
                style="@style/add_event_textview1"
                android:layout_alignRight="@+id/add_event_calendar"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="日程助理" />

            <TextView
                style="@style/add_event_divider"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp" />
        </RelativeLayout>

        <!-- 提醒 -->

        <RelativeLayout
            android:id="@+id/event_detail_remind1_container"
            android:layout_width="match_parent"
            android:layout_height="40.5dp"
            android:background="@color/event_layout_bg" >

            <Button
                android:id="@+id/event_detail_remind1"
                style="@style/add_event_button"
                android:background="@drawable/event_detail_btn_bg"
                android:drawablePadding="25dp"
                android:drawableRight="@drawable/event_right_arrow"
                android:text="提醒" 
                android:textColor="#000"/>

            <TextView
                android:id="@+id/add_event_remind_first_text"
                style="@style/add_event_textview1"
                android:layout_alignRight="@+id/event_detail_remind1"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="无" />

            <TextView
                style="@style/add_event_divider"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/event_detail_remind2_container"
            android:layout_width="match_parent"
            android:layout_height="40.5dp"
            android:background="@color/event_layout_bg"
            android:visibility="gone" >

            <Button
                android:id="@+id/event_detail_remind2"
                style="@style/add_event_button"
                android:layout_alignParentBottom="true"
                android:drawablePadding="25dp"
                android:drawableRight="@drawable/event_right_arrow"
                android:text="第二次提醒" 
                android:textColor="#000"/>

            <TextView
                android:id="@+id/add_event_remind_second_text"
                style="@style/add_event_textview1"
                android:layout_alignRight="@+id/event_detail_remind2"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="无" />

            <TextView
                style="@style/add_event_divider"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp" />
        </RelativeLayout>

        <!-- 链接 备注 -->

        <LinearLayout
            android:id="@+id/event_detail_url_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible" >

            <TextView
                style="@style/event_detail_textview"
                android:text="URL"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/event_detail_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="all"
                android:paddingLeft="10dp"
                android:text="url"
                android:textColor="#f00" />

            <TextView
                style="@style/add_event_divider"
                android:layout_marginLeft="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/event_detail_tip_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible" >

            <TextView
                style="@style/event_detail_textview"
                android:text="备注" />

            <TextView
                android:id="@+id/event_detail_tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="tip" />

            <TextView
                style="@style/add_event_divider"
                android:layout_marginLeft="10dp" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>