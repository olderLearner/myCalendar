<?xml version = "1.0" encoding = "utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wholeyear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5">

    <LinearLayout 
        android:id="@+id/wholeyear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_above="@+id/whole_bottom_btn"
        >
    
    </LinearLayout>
	
	<LinearLayout
        android:id="@+id/whole_bottom_btn"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

	<Button
	    android:id="@+id/whole_today"
	    style="@style/activity_bottom_btn"
	    android:gravity="left|center_vertical"
	    android:paddingLeft="10dp"
	    android:text="今天" />

	<Button
	    android:id="@+id/whole_add"
	    style="@style/activity_bottom_btn"
	    android:text="添加" />

	<Button
	    android:id="@+id/whole_update"
	    style="@style/activity_bottom_btn"
	    android:gravity="right|center_vertical"
	    android:paddingRight="10dp"
	    android:text="更新" />

    </LinearLayout>

</RelativeLayout>




