    <TextView
        android:id="@+id/divider03"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_above="@+id/solarmonth_bottom_btn"
        android:background="@color/divider_line_color" />
    
    <LinearLayout
        android:id="@+id/solarmonth_bottom_btn"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/solarmonth_today"
            style="@style/activity_bottom_btn"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:text="今天" />

        <Button
            android:id="@+id/solarmonth_add"
            style="@style/activity_bottom_btn"
            android:text="添加" />

        <Button
            android:id="@+id/solarmonth_lunar"
            style="@style/activity_bottom_btn"
            android:gravity="right|center_vertical"
            android:paddingRight="10dp"
            android:text="阴历" />

    </LinearLayout>

</RelativeLayout>