<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schema.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f5f5f5"
    android:orientation="horizontal"
     >

    <TextView
        android:id="@+id/day0"
        style="@style/weekend_name"
        android:text="日" />

    <TextView
        android:id="@+id/day1"
        style="@style/week_name"
        android:text="一" />

    <TextView
        android:id="@+id/day2"
        style="@style/week_name"
        android:text="二" />

    <TextView
        android:id="@+id/day3"
        style="@style/week_name"
        android:text="三" />

    <TextView
        android:id="@+id/day4"
        style="@style/week_name"
        android:text="四" />

    <TextView
        android:id="@+id/day5"
        style="@style/week_name"
        android:text="五" />

    <TextView
        android:id="@+id/day6"
        style="@style/weekend_name"
        android:text="六" />

</LinearLayout>