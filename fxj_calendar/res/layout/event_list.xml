<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="47dp"
    android:minHeight="47dp"
    android:orientation="horizontal"
     >
    <!-- android:background="@color/calendar_background" -->
    

    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:layout_marginTop="3.5dp"
        android:layout_marginBottom="3.5dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/event_list_begin_date"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textSize="12sp"
			android:gravity="right|center_vertical"
			android:paddingRight="10dp"            
            android:text="begin date" />

        <TextView
            android:id="@+id/event_list_stop_date"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textSize="12sp"
            android:textColor="@color/divider_line_color"
            android:paddingRight="10dp"
            android:gravity="right|center_vertical"
            android:text="stop date" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="1.5dp"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:background="@color/today_color" />

    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="3.5dp"
        android:layout_marginBottom="3.5dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/event_list_title"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:layout_gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:text="title" />
        
        <TextView
        	android:id="@+id/event_list_location"
        	android:layout_width="match_parent"
        	android:layout_height="20dp"
            android:textSize="12sp"
            android:textColor="@color/divider_line_color"
            android:layout_gravity="left|center_vertical"
            android:paddingLeft="10dp"
        	android:text="location" />

    </LinearLayout>

</LinearLayout>
