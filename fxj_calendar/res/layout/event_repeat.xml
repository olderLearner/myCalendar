<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/event_layout_bg"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/event_layout_bg"
        android:orientation="vertical" >

        <TextView
            style="@style/add_event_divider"
            android:layout_marginTop="@dimen/divider_margin" />

        <Button
            android:id="@+id/repeat_never"
           
            style="@style/add_event_button"
            android:text="永不" />
        <TextView
            style="@style/add_event_divider"
            android:layout_marginLeft="10dp" />

        <Button
            android:id="@+id/repeat_everyday"
            style="@style/add_event_button"
            android:text="每天" />
        <TextView
            style="@style/add_event_divider"
            android:layout_marginLeft="10dp" />

        <Button
            android:id="@+id/repeat_everyweek"
            style="@style/add_event_button"
            android:text="每周" />
        <TextView
            style="@style/add_event_divider"
            android:layout_marginLeft="10dp" />

        <Button
            android:id="@+id/repeat_everytwoweek"
            style="@style/add_event_button"
            android:text="每两周" />
        <TextView
            style="@style/add_event_divider"
            android:layout_marginLeft="10dp" />

        <Button
            android:id="@+id/repeat_everymonth"
            style="@style/add_event_button"
            android:text="每月" />
        <TextView
            style="@style/add_event_divider"
            android:layout_marginLeft="10dp" />

        <Button
            android:id="@+id/repeat_everyyear"
            style="@style/add_event_button"
            android:text="每年" />
        
        <TextView style="@style/add_event_divider" />
    </LinearLayout>

</ScrollView>