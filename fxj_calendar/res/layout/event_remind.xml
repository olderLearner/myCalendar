<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/event_layout_bg"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/event_layout_bg"
        android:orientation="vertical" >

        <TextView
            style="@style/add_event_divider"
            android:layout_marginTop="@dimen/divider_margin" />

        <Button
            android:id="@+id/remind_none"          
            style="@style/add_event_button"
            android:text="无" />
        <TextView
            style="@style/add_event_divider"
            android:layout_marginLeft="10dp" />

        <Button
            android:id="@+id/remind_atbegin"
            style="@style/add_event_button"
            android:text="事件发生时" />
        <TextView
            style="@style/add_event_divider"
            android:layout_marginLeft="10dp" />

        <Button
            android:id="@+id/remind_5min"
            style="@style/add_event_button"
            android:text="5 分钟前" />
        <TextView
            style="@style/add_event_divider"
            android:layout_marginLeft="10dp" />

        <Button
            android:id="@+id/remind_15min"
            style="@style/add_event_button"
            android:text="15 分钟前" />
        <TextView
            style="@style/add_event_divider"
            android:layout_marginLeft="10dp" />

        <Button
            android:id="@+id/remind_30min"
            style="@style/add_event_button"
            android:text="30 分钟前" />
        <TextView
            style="@style/add_event_divider"
            android:layout_marginLeft="10dp" />

        <Button
            android:id="@+id/remind_1hour"
            style="@style/add_event_button"
            android:text="1 小时前" />
        <TextView
            style="@style/add_event_divider"
            android:layout_marginLeft="10dp" />

        <Button
            android:id="@+id/remind_2hour"
            style="@style/add_event_button"
            android:text="2 小时前" />
        <TextView
            style="@style/add_event_divider"
            android:layout_marginLeft="10dp" />

        <Button
            android:id="@+id/remind_1day"
            style="@style/add_event_button"
            android:text="1 天前" />
        <TextView
            style="@style/add_event_divider"
            android:layout_marginLeft="10dp" />

        <Button
            android:id="@+id/remind_2day"
            style="@style/add_event_button"
            android:text="2 天前" />
        <TextView
            style="@style/add_event_divider"
            android:layout_marginLeft="10dp" />

        <Button
            android:id="@+id/remind_1week"
            style="@style/add_event_button"
            android:text="1 周前" />
        
        <TextView style="@style/add_event_divider" />
    </LinearLayout>

</ScrollView>