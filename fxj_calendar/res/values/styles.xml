<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">

        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <!-- 主题点击的底色，名字是对的，但是改不了 -->
        <!--
              <item name="android:button">#f00</item>  
        		@android:style/Widget.Holo.Light.ActionButton
        -->
        <!-- actionbar style -->
        <item name="android:actionBarStyle">@style/my_actionbarHeight</item>
        
        <!-- 改变菜单按钮的一些属性，只改了背景-->
         <item name="android:actionButtonStyle">@style/my_ab_btn</item>

        <!-- 菜单文字的表现形式，可以直接引用title style,只能改文字大小，形状（粗 细） ,颜色下面的属性改-->
        <item name="android:actionMenuTextAppearance">@style/actionbar_menuStyle</item>

        <!-- 菜单文字的颜色，必需用这个属性 -->
        <item name="android:actionMenuTextColor">@drawable/title_text_color</item>
		
		
		<!-- button styles -->
		<!-- 改变菜单up home 小箭头，在button style 中改 ，不是 actionbar -->		
		<item name="android:homeAsUpIndicator">@drawable/back_home</item>
		
		
		<!-- <item name="android:selectableItemBackground">@drawable/btn_bg_color</item> 
			改的不对
		-->
		
		 <item name="android:showDividers">middle</item>
		<!-- 改变 menu item 之间的分割线 -->
		<item name="android:dividerVertical">@null</item>
		<item name="android:dividerHorizontal">@drawable/list_divider</item>
		<!-- <item name="android:listDivider">@drawable/list_divider</item> -->
				
		<!-- 这个不起作用目前 -->
		<item name="android:buttonBarStyle">@style/ab_btnbarstyle</item>
        
		<!-- 这个东西会让 ActionBarImpl 出问题 -->
        <!-- <item name="android:actionBarItemBackground">@style/item_bg</item> -->
		
		<item name="android:buttonBarButtonStyle">@null</item>
		
    </style>

    
    
    
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:actionBarStyle">@style/my_actionbar</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="my_ab_btn" parent="@android:style/Widget.Holo.ActionButton">
        <item name="android:background">@drawable/list_divider</item>
        
    </style>

    <style name="item_bg" parent="@android:style/Holo.ButtonBar">
        
    </style>
     
    <style name="ab_btnbarstyle" parent="@android:style/Holo.ButtonBar">
        <item name="android:showDividers">@null</item>
        <item name="android:divider">@null</item>
        <item name="android:paddingTop">5dip</item>
        <item name="android:paddingBottom">20dip</item>
    </style>
    

    <style name="my_actionbar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#f5f5f5</item>
        <!-- <item name="android:alpha">0.5</item> -->
        <!-- <item name="android:alignmentMode">alignBounds</item> -->
        <item name="android:backgroundSplit">#f5f5f5</item>
        <item name="android:titleTextStyle">@style/actionbar_titleStyle</item>
        <item name="android:homeAsUpIndicator">@drawable/a01</item>
    </style>

    <!-- 2015 8 16 改变高度 -->
    <style name="my_actionbarHeight" parent="@android:style/Widget.ActionBar">
        <item name="android:background">@drawable/ab_divider</item>
        <!-- <item name="android:alpha">0.5</item>  -->
        <!-- <item name="android:alignmentMode">alignBounds</item> 没啥影响-->
        <item name="android:height">40dp</item>
        <item name="android:divider">@drawable/list_divider</item>
        
        <!-- padding actionbar 高度不变，与承载actionbar的布局的底部间隔此item数值，同时title 按钮与actionbar底部间隔此距离 -->
        <item name="android:paddingBottom">0dip</item>
        <item name="android:paddingTop">0dip</item>
       <!--  <item name="android:paddingStart">0dip</item> -->
        <item name="android:showDividers">@null</item>
        <item name="android:backgroundSplit">#f5f5f5</item>
        <item name="android:titleTextStyle">@style/actionbar_titleStyle</item>
        <!-- <item name="android:homeLayout">@layout/cus_action_bar_home</item> -->
    </style>

    
    <!-- add event activity theme -->
    <style name="add_event_activity_theme" parent="AppBaseTheme">
        <item name="android:homeAsUpIndicator">@drawable/list_divider</item>
    </style>
    
    <!-- datepicker theme -->
    <style name="datepicker_theme" parent="android:Theme.Dialog">
        <item name="android:background">#f5f5f5</item>
        <item name="android:textColor">#ff0000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- title 文字的样式 -->
    <style name="actionbar_titleStyle">
        <item name="android:textColor">@drawable/title_text_color</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- menu 文字的样式 -->
    <style name="actionbar_menuStyle">
        <item name="android:textColor">#f00</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="datepicker_titleStyle">
        <item name="android:textColor">#f00</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 界面底部按钮 -->
    <style name="activity_bottom_btn">
        <item name="android:layout_width">0.0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/calendar_background</item>
        <item name="android:textColor">@drawable/title_text_color</item>
        <item name="android:textSize">16sp</item>
        
    </style>
    
    
    <!-- 周名 style -->
    <style name="week_name">
        <item name="android:layout_width">0.0dp</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:textColor">@color/weekname_color</item>
        <item name="android:textSize">12.0sp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="weekend_name" parent="week_name">
        <item name="android:textColor">@color/weekendname_color</item>
    </style>
	
    <!-- 添加事件 -->
    <style name="add_event_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
		<item name="android:background">@color/divider_line_color</item>       
    </style>
   	
    <style name="add_event_edittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
		<item name="android:background">@color/event_widget_bg</item>
		<item name="android:singleLine">true</item>
		<item name="android:textSize">16sp</item>
		<item name="android:paddingLeft">10dp</item>
		<item name="android:gravity">left|center_vertical</item>       
    </style>
    <style name="add_event_textview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
		<item name="android:clickable">true</item>
		<item name="android:focusable">true</item>
		<item name="android:focusableInTouchMode">true</item>
		<item name="android:background">@drawable/add_event_clickable_textview_bg</item>
		<item name="android:singleLine">true</item>
		<item name="android:textSize">16sp</item>
		<item name="android:paddingLeft">10dp</item>
		<item name="android:gravity">left|center_vertical</item>		
    </style>
    <style name="add_event_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
		<item name="android:background">@drawable/add_event_clickable_textview_bg</item>
		<item name="android:singleLine">true</item>
		<item name="android:textSize">16sp</item>
		<item name="android:paddingLeft">10dp</item>
		<item name="android:gravity">left|center_vertical</item>
    </style>
    <style name="add_event_textview1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
		<item name="android:singleLine">true</item>
		<item name="android:textSize">16sp</item>
		<item name="android:textColor">#000</item>
		<item name="android:paddingRight">10dp</item>
		<item name="android:gravity">right|center_vertical</item>
		
    </style>
    
    
    <!-- 查看事件 -->
    <style name="event_detail_textview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
		<item name="android:textSize">12sp</item>
		<item name="android:textColor">#000</item>
		<item name="android:paddingLeft">10dp</item>
		<item name="android:gravity">left|center_vertical</item>
		
    </style>
    
    <style name="event_detail_header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
		<item name="android:paddingLeft">10dp</item>
		<item name="android:paddingTop">5dp</item>
		<item name="android:paddingBottom">5dp</item>
		<item name="android:gravity">left|center_vertical</item>
		<item name="android:textColor">#000</item>
		
    </style>
    

</resources>